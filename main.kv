MDScreenManager:
    TelaInicial:
    TelaLogin:
    TelaProduto:
    TelaUsuario:
    TelaCarrinho:
    TelaSupermecado:
    TelaComparativo:

<TelaInicial@MDScreen>:
    MDLabel:
        text: 'Carrinho de Compra:'
        size_hint_x: 1
        size_hint_y: 0.05
        font_size: 40
        halign: 'center'
        pos_hint: {"center_x":0.5, "center_y":0.7}
    Image:
        source: 'carrinho.jpg'
        size_hint: 0.2, 0.2
        pos_hint: {"center_x":0.5, "center_y":0.4}
    MDRectangleFlatButton:
        text: 'Come√ßar'
        on_press: app.root.current = 'telalogin'
        size_hint_y: 0.05
        background_color: 'black'
        pos_hint: {"center_x":0.5, "center_y":0.2}

<TelaLogin@MDScreen>:
    name: 'telalogin'
    Image:
        source: "login.jpg"
        pos_hint: {"center_x":0.5, "center_y":0.8}
    MDTextField:
        id: lbLogin
        size_hint_x: 0.7
        size_hint_y: None
        height: 40
        hint_text: "Login"
        pos_hint: {"center_x":0.5, "center_y":0.55}
    MDTextField:
        id: lbSenha
        size_hint_x: 0.7
        size_hint_y: None
        height: 40
        hint_text: "Senha"
        password: True
        pos_hint: {"center_x":0.5, "center_y":0.45}
    MDRectangleFlatButton:
        text: 'Login'
        size_hint: None, None
        width: 80
        height: 40
        on_press: root.login_press()
        pos_hint: {"center_x":0.4, "center_y":0.35}
    MDRectangleFlatButton:
        text: 'Recuperar senha'
        size_hint: None, None
        width: 80
        height: 40
        pos_hint: {"center_x":0.6, "center_y":0.35}

<TelaProduto@MDScreen>:
    name: 'telaproduto'
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			title: 'Produtos'
			icon: "text-search"
			elevation: 1
			right_action_items:
				[
				["account-box", lambda x: app.callback('telausuario'), 'Usuario'],
				["cart-minus", lambda x: app.callback('telacarrinho'), 'Carrinho'],
				["store-outline", lambda x: app.callback('telasupermecado'), 'Supermecado'],
				["compare", lambda x: app.callback('telacomparativo'), 'Comparativo'],
				["plus", lambda x: root.adicionar_produto(), 'Criar']
				]
		MDBoxLayout:
			MDTextField:
				id: edBusca
				icon_left: "magnify"
				hint_text: "Busca..."
			MDIconButton:
				icon: "image-search"
				text: "Buscar"
				on_press: root.filtra_produtos(root.ids.edBusca.text)
		ScrollView:
			MDList:
				id: lista

<TelaUsuario@MDScreen>:
    name: 'telausuario'
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			title: 'Usuario'
			elevation: 1
			right_action_items:
				[
				["food", lambda x: app.callback('telaproduto'), 'Produto'],
				["cart-minus", lambda x: app.callback('telacarrinho'), 'Carrinho'],
				["store-outline", lambda x: app.callback('telasupermecado'), 'Supermecado'],
				["compare", lambda x: app.callback('telacomparativo'), 'Comparativo']
				]
		MDTextField:
			id: lbId
			hint_text: "ID"
			pos_hint: {"center_x":0.5, "center_y":0.8}
			size_hint_x: 0.75
		MDTextField:
			id: lbNome
			hint_text: "Nome"
			pos_hint: {"center_x":0.5, "center_y":0.7}
			size_hint_x: 0.75
		MDTextField:
			id: lbEmail
			hint_text: "Email"
			pos_hint: {"center_x":0.5, "center_y":0.6}
			size_hint_x: 0.75
		MDTextField:
			id: lbSenha
			hint_text: "Senha"
			pos_hint: {"center_x":0.5, "center_y":0.5}
			password: True
			size_hint_x: 0.75
		MDTextField:
			id: lbCep
			hint_text: "CEP"
			pos_hint: {"center_x":0.5, "center_y":0.4}
			size_hint_x: 0.75

<TelaCarrinho@MDScreen>:
    name: 'telacarrinho'
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			id: topBar
			title: 'Carrinho de compras'
			icon: "text-search"
			elevation: 1
			right_action_items:
				[
				["account-box", lambda x: app.callback('telausuario'), 'Usuario'],
				["food", lambda x: app.callback('telaproduto'), 'Produtos'],
				["store-outline", lambda x: app.callback('telasupermecado'), 'Supermecado'],
				["compare", lambda x: app.callback('telacomparativo'), 'Comparativo'],
				["plus", lambda x: root.adicionar_carrinho(), 'Criar']
				]
		ScrollView:
			MDList:
				id: lista

<TelaProdutoPorCarrinho@MDScreen>:
	name: 'telaprodutoporcarrinho'

<TelaSupermecado@MDScreen>:
    name: 'telasupermecado'
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			title: 'Supermecado'
			elevation: 1
			right_action_items:
				[
				["account-box", lambda x: app.callback('telausuario'), 'Usuario'],
				["food", lambda x: app.callback('telaproduto'), 'Produtos'],
				["cart-minus", lambda x: app.callback('telacarrinho'), 'Carrinho'],
				["compare", lambda x: app.callback('telacomparativo'), 'Comparativo'],
				["plus", lambda x: root.adicionar_supermecado(), 'Criar']
				]
		ScrollView:
			MDList:
				id: lista

<TelaComparativo@MDScreen>:
    name: 'telacomparativo'
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			title: 'Comparativo'
			elevation: 1
			right_action_items:
				[
				["account-box", lambda x: app.callback('telausuario'), 'Usuario'],
				["food", lambda x: app.callback('telaproduto'), 'Produtos'],
				["cart-minus", lambda x: app.callback('telacarrinho'), 'Carrinho']
				]
		ScrollView:
			MDList:
				id: lista

<CustomProdutoListItem@OneLineAvatarIconListItem>:
	text: "Produto"
	internal_key: ""
	on_size:
        self.ids._right_container.width = container.width
        self.ids._right_container.x = container.width

    IconLeftWidget:
        icon: "food"

    YourContainer:
        id: container

        MDIconButton:
            icon: "minus"
			on_press: app.remove_produto_no_carrinho(root.internal_key)

        MDIconButton:
            icon: "plus"
			on_press: app.adiciona_produto_no_carrinho(root.internal_key)

<CustomCarrinhoListItem@OneLineAvatarIconListItem>:
    text: "One-line item with avatar"
	internal_key: ""
    on_size:
        self.ids._right_container.width = container.width
        self.ids._right_container.x = container.width

    IconLeftWidget:
        icon: "cart-minus"

    YourContainer:
        id: container

        MDIconButton:
            icon: "minus"
			on_press: app.remove_carrinho_button(root.text)

<Content>:
	MDTextField:
        id : textField
        pos_hint : {'center_x':.5,'center_y':.5}

<ContentSupermecado>:
	orientation: "vertical"
	spacing: "12dp"
	size_hint_y: None
	height: "120dp"

	MDTextField:
		id : nomeField
		pos_hint : {'center_x':.5,'center_y':.5}
		hint_text: "Nome"

	MDTextField:
		id : siteField
		pos_hint : {'center_x':.5,'center_y':.5}
		hint_text: "Site"