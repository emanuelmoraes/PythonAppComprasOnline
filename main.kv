MDScreenManager:
    TelaInicial:
    TelaLogin:
    TelaProduto:
    TelaUsuario:
    TelaCarrinho:
    TelaSupermecado:
    TelaComparativo:

<TelaInicial@MDScreen>:
    MDLabel:
        text: 'Carrinho de Compra:'
        size_hint_x: 1
        size_hint_y: 0.05
        font_size: 40
        halign: 'center'
        pos_hint: {"center_x":0.5, "center_y":0.7}
    Image:
        source: 'carrinho.jpg'
        size_hint: 0.2, 0.2
        pos_hint: {"center_x":0.5, "center_y":0.4}
    MDRectangleFlatButton:
        text: 'Come√ßar'
        on_press: app.root.current = 'telalogin'
        size_hint_y: 0.05
        background_color: 'black'
        pos_hint: {"center_x":0.5, "center_y":0.2}

<TelaLogin@MDScreen>:
    name: 'telalogin'
    Image:
        source: "login.jpg"
        pos_hint: {"center_x":0.5, "center_y":0.8}
    MDTextField:
        id: lbLogin
        size_hint_x: 0.7
        size_hint_y: None
        height: 40
        hint_text: "Login"
        pos_hint: {"center_x":0.5, "center_y":0.55}
    MDTextField:
        id: lbSenha
        size_hint_x: 0.7
        size_hint_y: None
        height: 40
        hint_text: "Senha"
        password: True
        pos_hint: {"center_x":0.5, "center_y":0.45}
    MDRectangleFlatButton:
        text: 'Login'
        size_hint: None, None
        width: 80
        height: 40
        on_press: root.login_press()
        pos_hint: {"center_x":0.4, "center_y":0.35}
    MDRectangleFlatButton:
        text: 'Recuperar senha'
        size_hint: None, None
        width: 80
        height: 40
        pos_hint: {"center_x":0.6, "center_y":0.35}
    MDLabel:
        id: lbResposta
        text: '-'
        size_hint_y: None
        height: 40
        pos_hint: {"center_x":0.5, "center_y":0.25}

<TelaProduto@MDScreen>:
    name: 'telaproduto'
    MDTopAppBar:
        title: 'Busca de produtos'
        icon: "text-search"
        elevation: 1
        right_action_items:
            [
            ["account-box", lambda x: app.callback('telausuario'), 'Usuario'],
            ["cart-minus", lambda x: app.callback('telacarrinho'), 'Carrinho'],
            ["store-outline", lambda x: app.callback('telasupermecado'), 'Supermecado'],
            ["compare", lambda x: app.callback('telacomparativo'), 'Comparativo']
            ]

<TelaUsuario@MDScreen>:
    name: 'telausuario'

<TelaCarrinho@MDScreen>:
    name: 'telacarrinho'

<TelaSupermecado@MDScreen>:
    name: 'telasupermecado'

<TelaComparativo@MDScreen>:
    name: 'telacomparativo'